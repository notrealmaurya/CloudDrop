<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_link_item"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/titleLinkItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/font_title"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="Title"
                    android:textColor="@color/ImageViewAndTextViewColour"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/downloadLinkLinkItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/font_link"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="Link"
                    android:textColor="@color/ImageViewAndTextViewColour"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/dateLinkItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/font_date"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="Date"
                    android:textColor="@color/ImageViewAndTextViewColour"
                    android:textSize="15sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/linkShareButtonLinkItem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_ripplefactor"
                android:padding="8dp"
                android:src="@drawable/icon_share" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sharePopUpOptionLayoutLinkItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:id="@+id/triangleView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="end"
                android:layout_marginEnd="28dp"
                android:background="@drawable/icon_triangle" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginHorizontal="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:background="@color/UploadBackgroundColour"
                    android:clickable="false"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/whatsAppShareLinkItem"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg_ripplefactor"
                        android:padding="3dp"
                        android:src="@drawable/icon_whatsapp" />

                    <ImageView
                        android:id="@+id/faceBookShareLinkItem"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg_ripplefactor"
                        android:padding="3dp"
                        android:src="@drawable/icon_facebook" />

                    <ImageView
                        android:id="@+id/messageShareLinkItem"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg_ripplefactor"
                        android:padding="3dp"
                        android:src="@drawable/icon_message" />

                    <ImageView
                        android:id="@+id/copyLinkShareLinkItem"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg_ripplefactor"
                        android:padding="3dp"
                        android:src="@drawable/icon_copylink" />

                    <ImageView
                        android:id="@+id/moreShareLinkItem"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg_ripplefactor"
                        android:padding="3dp"
                        android:src="@drawable/icon_more" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>




